{% assign archive = site.data.archive %}

{%- if archive.series -%}
  {%- for s in archive.series -%}
  <section class="blog-preamble">
    <h2>{{ s.title }}</h2>
    {%- if s.blurb -%}
      <div class="preamble-series-blurb text-muted small">{{ s.blurb }}</div>
    {%- endif -%}
    <ul class="list-unstyled small">
      {%- for it in s.items -%}
        {%- assign p = site.categories.blog | where: 'url', it.url | first -%}
        {%- assign link_title = it.title | default: p.title -%}
        <li class="preamble-item">
          <div class="preamble-title"><a href="{{ it.url | relative_url }}">{{ link_title }}</a></div>
          {%- if it.blurb -%}<div class="preamble-blurb text-muted small">{{ it.blurb }}</div>{%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </section>
  {%- endfor -%}
{%- endif -%}

<section class="blog-preamble">
  <h2>Highlighted Posts</h2>
  <ul class="list-unstyled small">
    {%- if archive.highlights -%}
      {%- for h in archive.highlights -%}
        {%- assign p = site.categories.blog | where: 'url', h.url | first -%}
        {%- assign link_title = h.title | default: p.title -%}
        <li class="preamble-item">
          <div class="preamble-title"><a href="{{ h.url | relative_url }}">{{ link_title }}</a></div>
          {%- if h.blurb -%}<div class="preamble-blurb text-muted small">{{ h.blurb }}</div>{%- endif -%}
        </li>
      {%- endfor -%}
    {%- endif -%}
  </ul>
</section>
